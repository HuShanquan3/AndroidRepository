<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- 主页底部指示器的文字样式-->
    <style name="bottom_indicator_text_style">
        <item name="android:textColor">@color/selector_rb_text_color</item>
        <item name="android:textSize">@dimen/rb_text_size</item>
    </style>

    <!-- 主页 RadioButton 的样式-->
    <style name="radio_button_style" parent="bottom_indicator_text_style">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    android:background="@color/colorAccent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="6dp"

    <!-- 首页Fragment的每一行的Item的容器样式 -->
    <style name="home_fragment_row_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_home_item_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">6dp</item>

    </style>

    <style name="home_fragment_row_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="home_fragment_row_item_title_style">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="home_fragment_row_item_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- HomeFragment 中每一个模块内容的标题 -->
    <style name="home_fragment_content_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/recommend_icon_line</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:textColor">@color/recommend_text_color</item>
        <item name="android:background">@color/recommend_tv_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
