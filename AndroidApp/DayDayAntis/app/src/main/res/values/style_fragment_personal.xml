<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- PersonalFragment 中用户头部的容器样式  -->
    <style name="fragment_personal_head_container_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:background">@color/fragment_personal_head_user_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- PersonalFragment 中用户头部的头像样式  -->
    <style name="fragment_personal_head_user_iv_style">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">7dp</item>
    </style>

    <!-- PersonalFragment 中用户名称地区容器样式  -->
    <style name="fragment_personal_head_user_container_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- PersonalFragment 中任务item的容器样式  -->
    <style name="fragment_personal_task_item_container_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_item_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- PersonalFragment 中任务item 中的头部文字样式  -->
    <style name="fragment_personal_task_item_top_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/personal_fragment_task_item_top_text</item>
        <item name="android:textSize">@dimen/personal_fragment_task_item_top_text</item>
    </style>

    <!-- PersonalFragment 中任务item 中的底部文字样式  -->
    <style name="fragment_personal_task_item_bottom_style">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/personal_fragment_task_item_bottom_text</item>
        <item name="android:textSize">@dimen/personal_fragment_task_item_bottom_text</item>
    </style>


    <!-- PersonalFragment 主内容每一行的Item的容器样式 -->
    <style name="fragment_personal_row_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_item_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">6dp</item>
    </style>

    <!-- PersonalFragment 的主内容一个Item的的图片样式 -->
    <style name="fragment_personal_row_item_iv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
    </style>

    <!-- PersonalFragment 的主内容一个Item的的文字标题样式 -->
    <style name="fragment_personal_row_item_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/personal_fragment_content_item_text</item>
        <item name="android:textSize">@dimen/personal_fragment_content_item_text</item>
    </style>

    <!-- PersonalFragment 底部问题的TextView的样式 -->
    <style name="fragment_personal_problem_list_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_item_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableLeft">@drawable/common_problem</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableRight">@drawable/right_arrow</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/personal_fragment_problem_list_text</item>
        <item name="android:textSize">@dimen/personal_fragment_problem_list_text</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

</resources>