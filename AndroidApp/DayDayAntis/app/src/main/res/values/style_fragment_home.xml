<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- HomeFragment 中主内容每一行的容器样式 -->
    <style name="fragment_home_row_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <!-- HomeFragment 的主内容每一行的Item的容器样式 -->
    <style name="home_fragment_row_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_item_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">6dp</item>

    </style>

    <!-- HomeFragment 的主内容一个Item的的文字标题样式 -->
    <style name="fragment_home_row_item_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/fragment_home_item_title_color</item>
        <item name="android:textSize">@dimen/fragment_home_item_title_size</item>
    </style>

    <!-- HomeFragment 的主内容一个Item的的文字内容样式 -->
    <style name="fragment_home_row_item_text_style">
        <item name="android:maxLines">2</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/fragment_home_item_content_color</item>
        <item name="android:textSize">@dimen/fragment_home_item_content_size</item>
    </style>

    <!-- HomeFragment 中每一个模块内容的标题 -->
    <style name="home_fragment_content_heading">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/recommend_icon_line</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:textColor">@color/home_fragment_content_heading_color</item>
        <item name="android:background">@color/home_fragment_content_heading_bg</item>
        <item name="android:textSize">@dimen/home_fragment_content_heading_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>